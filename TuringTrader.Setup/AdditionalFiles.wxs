      </Component>

      <!-- ===== data files ======================================== -->
      <Component Id="cmpSpxInf" Directory="DataDir" Guid="*">
        <File Id="filSpxInf" KeyPath="yes" Source="$(var.HomeDir)\Data\$SPX.inf" />
      </Component>

      <Component Id="cmpVixInf" Directory="DataDir" Guid="*">
