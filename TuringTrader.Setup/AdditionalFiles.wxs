      </Component>

      <!-- ===== demo algorithms ======================================== -->
      <Component Id="cmpDemo01" Directory="DemoAlgorithmsDir" Guid="*">
        <File Id="filDemo01" KeyPath="yes" Source="$(var.HomeDir)\Algorithms\Demo Algorithms\Demo01_Indicators.cs" />
      </Component>

